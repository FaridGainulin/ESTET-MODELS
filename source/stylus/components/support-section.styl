.support-section
  background-image: url('../images/support-section-bg.jpg')
  background-repeat: no-repeat
  background-position: center
  background-size: cover
  background-color #7DBFCF

  &__container
    position relative
    padding 20px 0 1px 0
    +above($breakpoints.sm)
      padding 50px 0 50px 0
    +above($breakpoints.md)
      padding 90px 0 90px 0
    +above($breakpoints.xxl)
      padding 150px 0 150px 0

  &__title
    padding 0 0 20px 0
    text-align: center
    +above($breakpoints.sm)
      padding 0 0 30px 0
    +above($breakpoints.md)
      padding 0 0 50px 0
    +above($breakpoints.xxl)
      padding 0 0 80px 0

  &__cards
    +above($breakpoints.sm)
      display: flex
      flex-direction: row
      flex-wrap: wrap
      justify-content center
      gap: 10px
    +above($breakpoints.md)
      gap: 20px

  &__card
    height: 208px !important
    width 280px !important
    +above($breakpoints.sm)
      height: 221px !important
      width auto !important
    +above($breakpoints.md)
      height: 289px !important
    +above($breakpoints.xxl)
      height: 357px !important

  &__card-img
    height: 100%
    width auto
    margin 0 auto
    +above($breakpoints.sm)
      margin 0

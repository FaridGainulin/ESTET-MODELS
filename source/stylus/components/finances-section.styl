.finances-section
  // background-image: url('../images/finances-section-bg.jpg')
  // background-repeat: no-repeat
  // background-position: center
  // background-size: cover
  background-color #fff

  &__container
    position relative
    padding 20px 0 0 0
    +above($breakpoints.sm)
      padding 50px 0 50px 0
    +above($breakpoints.md)
      padding 80px 0 80px 0
    +above($breakpoints.xxl)
      padding 103px 0 110px 0

  &__left-image
    display: none
    +above($breakpoints.sm)
      display: block
      position: absolute
      width: 300px;
      height: auto;
      top: 86px;
      left: -242px;
    +above($breakpoints.md)
      width: 423px;
      top: 90px;
      left: -343px;
    +above($breakpoints.xxl)
      width: 723px;
      top: 16px;
      left: -580px;

  &__right-image
    display: none
    +above($breakpoints.sm)
      display: block
      position: absolute
      width: 300px;
      height: auto;
      bottom: 120px;
      right: -223px;
    +above($breakpoints.md)
      width: 443px;
      bottom: 127px;
      right: -334px;
    +above($breakpoints.xxl)
      width: 743px;
      bottom: 48px;
      right: -560px;

  &__title
    color: #000
    padding 0 0 20px 0
    +above($breakpoints.sm)
      padding 0 0 30px 0
    +above($breakpoints.md)
      padding 0 0 40px 0
    +above($breakpoints.xxl)
      line-height 119% !important
      padding 0 0 56px 0

  &__cards
    +above($breakpoints.sm)
      display: flex
      flex-wrap: wrap
      justify-content center
      gap: 10px
    +above($breakpoints.md)
      gap: 20px

  &__card
    width 280px !important
    box-shadow: 0 4px 9px 0 rgba(0, 0, 0, 0.25);
    background: #fff;
    border-radius: 20px
    padding 20px 0
    text-align: center
    +above($breakpoints.sm)
      text-align: start
      width 235px !important
      height: 130px
      padding 20px 0 20px 0
    +above($breakpoints.md)
      width 308px !important
      height: 150px
      padding 25px 0 25px 0
    +above($breakpoints.xxl)
      width 380px !important
      height: 180px
      padding 32px 0 31px 0

  &__card-title
    display: flex
    align-items: center
    justify-content center
    background-color #000
    height: 35px
    +above($breakpoints.sm)
      justify-content start
      padding-left 20px
      height: 40px
    +above($breakpoints.md)
      padding-left 25px
      height: 45px
    +above($breakpoints.xxl)
      padding-left 33px
      height: 52px

  &__card-text
    color: #000
    padding 15px 0 0 0
    +above($breakpoints.sm)
      padding 17px 0 0 20px
    +above($breakpoints.md)
      padding 17px 0 0 25px
    +above($breakpoints.xxl)
      padding 17px 0 0 33px

  &__bottom
    position relative
    background-image: url('../images/finances-section-bottom-bg.jpg')
    background-repeat: no-repeat
    background-position: center
    background-size: cover
    background-color #000
    border-radius: 20px
    padding 15px 10px
    display: flex
    flex-direction: column
    align-items: center
    gap: 15px
    +above($breakpoints.sm)
      margin-top 40px
      flex-direction: row
      justify-content space-between
      padding 20px
    +above($breakpoints.md)
      margin-top 50px
      padding 25px 25px 25px 38px
    +above($breakpoints.xxl)
      margin-top 63px
      padding 29px 26px 29px 48px

  &__bottom-icon
    display: none
    +above($breakpoints.sm)
      display: block
      position: absolute
      width: 236px;
      height: auto
      bottom: 1px;
      left: 213px;
    +above($breakpoints.md)
      width: 333px;
      bottom: -3px;
      left: 291px;
    +above($breakpoints.xxl)
      width 414px
      bottom: -3px
      left: 369px

  &__bottom-text
    text-align: center
    display: flex
    flex-direction: column
    align-items: center
    gap: 10px
    +above($breakpoints.sm)
      text-align: start
      align-items: flex-start

  &__form
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    width 280px
    +above($breakpoints.sm)
      width 260px
    +above($breakpoints.md)
      gap: 10px
      width 330px
    +above($breakpoints.xxl)
      width 350px
      gap: 16px
    button
      +above($breakpoints.md)
        margin-top 10px

  &__img-mobile
    width 300px
    height: auto
    margin 0 auto
    +above($breakpoints.sm)
      display: none

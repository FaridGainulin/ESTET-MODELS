.header
  &__container
    display: flex
    flex-direction: row
    align-items: center
    justify-content space-between

  &__brand
    display: flex
    align-items: center
    gap: 20px
    +above($breakpoints.md)
      gap: 25px
    +above($breakpoints.xxl)
      gap: 38px

  &__text
    display: none
    +above($breakpoints.sm)
      display: block

  &__logo
    width 80px
    height: auto
    +above($breakpoints.sm)
      width 100px
    +above($breakpoints.md)
      width 130px
    +above($breakpoints.xxl)
      width 158px

  &__connection
    display: flex
    flex-direction: row
    align-items: center
    justify-content center
    gap: 5px
    background-color #fff
    color: #000
    border-radius: 20px
    width 160px
    height: 35px
    +above($breakpoints.sm)
      gap: 8px
      width 180px
      height: 40px
    +above($breakpoints.md)
      border-radius: 40px
      width 220px
      height: 45px
    +above($breakpoints.xxl)
      width 240px
      height: 50px

